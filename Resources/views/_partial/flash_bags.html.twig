{%- for type, messages in app.session.flashbag.all -%}
    {%- set type = ("error" == type) ? "danger" : type -%}
    {%- for message in messages -%}
        <div class="alert {{ "alert-#{type}" }}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{- message -}}
        </div>
    {%- endfor -%}
{%- endfor -%}
